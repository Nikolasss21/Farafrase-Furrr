mkdir parafrase-app
cd parafrase-app
mkdir -p api public utils
touch api/paraphrase.py
touch utils/paraphraser.py
touch requirements.txt
touch vercel.json
touch runtime.txt
touch .gitignore
{
  "builds": [
    {
      "src": "api/paraphrase.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/",
      "dest": "/public/index.html"
